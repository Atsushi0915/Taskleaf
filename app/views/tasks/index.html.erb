<h1>タスク一覧</h1>

<%= link_to "新規登録", new_task_path, class:"btn btn-primary" %>

<table class="table table-hover">
  <thead class="thead-default">
    <%= tag.tr %>
      <%= tag.th Task.human_attribute_name(:name) %>
      <%= tag.th Task.human_attribute_name(:created_at) %>
  </thead>
  <tbody>
    <% @task.each do |task| %>
      <%= tag.tr %>
        <%= tag.td link_to task.name, task %>
        <%= tag.td task.created_at %>
        <%= tag.td link_to "編集", edit_task_path(task), class:"btn btn-primary mt-3" %>
    <% end %>
  <tbody>
</table>